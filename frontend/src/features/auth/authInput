const AuthInput = ({ type, placeholder, value, onChange }) => {
  return (
    <input
      type={type}
      placeholder={placeholder}
      value={value}
      onChange={onChange}
      className="w-full mb-3 px-3 py-2 bg-black border border-gray-700 rounded outline-none focus:border-blue-500"
    />
  );
};

export default AuthInput;
